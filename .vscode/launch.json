{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Launch Chrome",
          "type": "chrome",
          "request": "launch",
          "url": "http://localhost:3000",
          "webRoot": "${workspaceRoot}",
          "trace": true,
          "sourceMapPathOverrides": {
              "webpack:///*": "${workspaceRoot}/*"
          }
      },
      {
          "name": "Attach to Chrome",
          "type": "chrome",
          "request": "attach",
          "port": 9222,
          "url": "http://localhost:9222",
          "webRoot": "${workspaceRoot}",
          "trace": true,
          "sourceMapPathOverrides": {
              "webpack:///*": "${workspaceRoot}/*"
          }
      }
  ]
}